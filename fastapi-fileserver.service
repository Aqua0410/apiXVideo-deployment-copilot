[Unit]
Description=FastAPI File Server API
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/fastapi-fileserver
EnvironmentFile=/etc/fastapi-fileserver.env
ExecStart=/var/www/fastapi-fileserver/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8000 --workers 2
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target